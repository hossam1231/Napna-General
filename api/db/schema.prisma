datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id                  String       @id @default(cuid())
  email               String       @unique
  name                String?
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
}

model Plan {
  id                  String       @id @default(cuid())
  name                String?
  price               String
  body                String
}

model Partner {
  id                  String       @id @default(cuid())
  userId              String?      @unique
  // who is this backstage account belonging to
  merchant            Merchant[]
  // who is this merchant account belonging to this allows for one partner to own many stores (merchants)
  staff               Staff[]
  // checks where they work and what they do can also bring up co workers for instant message
}

model Merchant {
  id                  String       @id @default(cuid())
  name                String
  address             String       @unique
  postalCode          String
  partner             Partner      @relation(fields: [partnerId], references: [id])
  partnerId           String
  // who owns this shop show private info to them grant admin auto
  staff               Staff[]
  // who works here
}

model Staff {
  role                String
  // acess controls
  name                String
  email               String       @unique
  merchant            Merchant     @relation(fields: [merchantId], references: [id])
  merchantId          String
  // what shop
  partner             Partner      @relation(fields: [partnerId], references: [id])
  partnerId           String
  // who is this person

 @@id(merchantId)

}


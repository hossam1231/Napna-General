datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id                  String       @id @default(cuid())
  email               String       @unique
  name                String?
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
}

model Plan {
  id                  String       @id @default(cuid())
  name                String?
  price               String
  body                String
}

model Partner {
  id                  String       @id @default(cuid())
  userId              String?      @unique
  merchantId          String
}

model Merchant {
  id                  String       @id @default(cuid())
  partnerId           String
  name                String
  address             String       @unique
  postalCode          String
}

model ActivePlan {
  id                  String       @id @default(cuid())
  partnerId           String       @unique
  merchantId          String
  planId              String
  updatedAt           String
  createdAt           DateTime     @default(now())
}
